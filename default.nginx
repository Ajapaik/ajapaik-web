# For Django development
upstream fotodugnad_dev_server {
    server 127.0.0.1:8000;
}

upstream fotodugnad_app_server {
    server unix:///home/fotodugnad/ajapaik-web/fotodugnad.sock;
}

# Expires map
map $sent_http_content_type $expires {
    default                    off;
    text/html                  epoch;
    text/css                   max;
    application/javascript     max;
    ~image/                    max;
}

server {
    listen 80 default_server;
    listen [::]:80 default_server;

    expires $expires;

    add_header Content-Security-Policy upgrade-insecure-requests;

    server_name www.fotodugnad.ra.no fotodugnad.ra.no;

    access_log /var/log/nginx/fotodugnad.access.log;
    error_log /var/log/nginx/fotodugnad.error.log;

    if ($host !~* ^(fotodugnad.ra.no|www.fotodugnad.ra.no)$ ) {
        return 444;
    }

    location /media  {
        alias /home/fotodugnad/ajapaik-web/media;
    }

    location /static {
        alias /home/fotodugnad/ajapaik-web/static-collected;
    }

    location ~ ^/favicon.(\w*)$ {
        alias /home/fotodugnad/ajapaik-web/static-collected/favicon.$1;
    }

    location / {
        include uwsgi_params;
        uwsgi_pass fotodugnad_app_server;
    }
}